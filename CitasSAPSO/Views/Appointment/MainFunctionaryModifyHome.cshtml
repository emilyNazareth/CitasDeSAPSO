
@{
    ViewData["Title"] = "MainFunctionaryModifyHome";
}

<form asp-controller="Home" asp-action="MainFunctionaryModifyHome" method="post">
    @foreach (CitasSAPSO.Models.UserModels data in ViewBag.data)
    {


        <div class="row align-items-start">
            <div class="col">
                <p class="text-success">Datos Personales</p>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="identification">Numero de identificacion:</label>
                    <input class="col-sm-4 form-control form-control-sm" type="text" id="cedula" name="cedula" value=@data.Cedula>

                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="name">Nombre:</label>
                    <input class="col-sm-4 form-control form-control-sm" type="text" id="identification" name="name" value=@data.Name>
                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="firstLastName">Primer Apellido:</label>
                    <input class="col-sm-4 form-control form-control-sm" type="text" id="firstLastName" name="firstLastName" value=@data.FirstLastName>
                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="secondLastName">Segundo Apellido:</label>
                    <input class="col-sm-4 form-control form-control-sm" type="text" id="secondLastName" name="secondLastName" value=@data.SecondLastName>
                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="personalPhone">Teléfono Personal:</label>
                    <input class="col-sm-4 form-control form-control-sm" type="text" id="personalPhone" name="personalPhone" value=@data.PersonalPhone>
                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="housePhone">Teléfono de habitación:</label>
                    <input class="col-sm-4 form-control form-control-sm" type="text" id="housePhone" name="roomPhone" value=@data.RoomPhone>
                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="birthday">Fecha de nacimineto</label>
                    <input type="datetime" class="col-sm-4 form-control form-control-sm" id="birthday" name="birthday" value="@data.Birthday" />
                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="gender">Sexo</label>
                    <select class="col-sm-5 custom-select custom-select-sm" id="gender" name="gender">
                        @if (@data.Gender == 'M')
                        {
                            <option value="M" selected>Masculino</option>
                            <option value="F">Femenino</option>
                        }
                        else
                        {
                            <option value="M">Masculino</option>
                            <option value="F" selected>Femenino</option>
                        }


                    </select>
                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="scholarship">Escolaridad</label>
                    <select class="col-sm-5 custom-select custom-select-sm" id="scholarship" name="scholarship" value="@data.Scholarship">                   
                        <option value="Primaria">Primaria</option>
                        <option value="Segundaria">Segundaria</option>
                        <option value="Técnico">T&eacutecnico</option>
                        <option value="Bachillerato">Bachillerato</option>
                        <option value="Licenciatura">Licenciatura</option>
                        <option value="Maestría">Maestr&iacutea</option>
                        <option value="Doctorado">Doctorado</option>
                    </select>
                </div>



                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="civilStatus">Estado civil:</label>
                    <select class="col-sm-5 custom-select custom-select-sm" id="civilStatus" name="civilStatus" value="@data.CivilStatus">
                        <option value="Casado(a)">Casado(a)</option>
                        <option value="Divorsiado(a)">Divorsiado(a)</option>
                        <option value="Viudo(a)">Viudo(a)</option>
                        <option value="Soltero(a)">Soltero(a)</option>
                    </select>
                </div>

                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="province">Provincia</label>
                    <input class="col-sm-4 form-control form-control-sm" type="text" id="province" name="province" value="@data.Province">
                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="canton">Cantón</label>
                    <input class="col-sm-4 form-control form-control-sm" type="text" id="canton" name="canton" value="@data.Canton">
                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="district">Distrito</label>
                    <input class="col-sm-4 form-control form-control-sm" type="text" id="district" name="district" value="@data.District">

                </div>


                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="address">Dirección:</label>
                    <textarea class="col-sm-6 form-control form-control-sm" id="address" name="address" rows="1">@data.Address</textarea>
                </div>
            </div>
            <div class="col">
                <br />

                <div class="row functionary-register">
                    <label class="col-sm-4 control-label small" for="assistance">Asistencia</label>
                    <select class="col-sm-5 custom-select custom-select-sm" id="assistance" name="assistance">

                        @foreach (CitasSAPSO.Models.CatalogueModels assistance in ViewBag.assistance)
                        {
                            <option value="@assistance.ID">@assistance.Name</option>

                        }

                    </select>
                </div>

            </div>
            <div class="col">
                <p class="text-success">Datos Laborales</p>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="area">Área</label>
                    <select class="col-sm-5 custom-select custom-select-sm" id="area" name="areaID" value="@data.AreaID">
                        @foreach (CitasSAPSO.Models.CatalogueModels areas in ViewBag.areas)
                        {
                            <option value="@areas.ID">@areas.Name</option>

                        }
                    </select>
                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="office">Oficina</label>
                    <select class="col-sm-5 custom-select custom-select-sm" id="office" name="officeID" value="@data.OfficeID">
                        @foreach (CitasSAPSO.Models.CatalogueModels offices in ViewBag.offices)
                        {
                            <option value="@offices.ID">@offices.Name</option>

                        }
                    </select>
                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="place">Puesto</label>
                    <select class="col-sm-5 custom-select custom-select-sm" id="place" name="placeID" value="@data.PlaceID">
                        @foreach (CitasSAPSO.Models.CatalogueModels places in ViewBag.places)
                        {
                            <option value="@places.ID">@places.Name</option>

                        }
                    </select>
                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="admissionDate">Fecha de ingreso</label>
                    <input type="datetime" class="col-sm-4 form-control form-control-sm" id="admissionDate" name="admissionDate" value="@data.AdmissionDate" />
                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="officePhone">Teléfono Oficina:</label>
                    <input class="col-sm-4 form-control form-control-sm" type="text" id="oficePhone" name="oficePhone" value=@data.OficePhone>
                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="email">Correo electrónico:</label>
                    <input class="col-sm-4 form-control form-control-sm" type="email" id="mail" name="mail" value=@data.Mail>
                </div>
                <p class="text-success">Aplica si el puesto lo amerita</p>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="idPlaca">Id placa</label>
                    <input class="col-sm-4 form-control form-control-sm" type="text" id="idPlaca" name="idPlaca" value="@data.IdPlaca">

                </div>
                <div class="row functionary-register">
                    <label class="col-sm-6 control-label small" for="expDate">Fecha de vecimiento portación de armas</label>
                    <input type="datetime" class="col-sm-4 form-control form-control-sm" id="PortationExpirationDay" name="PortationExpirationDay" value="@data.PortationExpirationDay" />
                </div>
                <br />
                <div class="row justify-content-end">


                    @Html.ActionLink("Atrás", "ConsultDateAdministrator", "User", null, new { @class = "btn btn-success btn-sm" })
                    <input class="btn btn-success btn-sm" type="submit" id="siguiente" name="siguiente" value="Siguiente" style="margin-left: 5px;" />


                </div>
            </div>

        </div>
    }
</form>
<script>

    var functionary =@Html.Raw(Json.Encode(ViewBag.data[0]));
    document.getElementById("scholarship").value = functionary.Scholarship;
    document.getElementById("civilStatus").value = functionary.CivilStatus;
    document.getElementById("area").value = functionary.AreaID;
    document.getElementById("office").value = functionary.OfficeID;
    document.getElementById("place").value = functionary.PlaceID;
    /*  window.onload = function () {
          loadFunctionaryRegister();
      }*/


</script>
