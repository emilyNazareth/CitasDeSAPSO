@{
    ViewData["Title"] = "ManageActivitySubtype";
}

<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<center>
    <form id="login-form">
        <h3 class="titles">Administración de subactividad</h3>
        <div class="form-group">
            <input type="number" name="id" id="id" class="form-control" placeholder="ID" readonly>
        </div>
        <div class="form-group">
            <input type="text" name="description" id="description" class="form-control" placeholder="Descripción">
        </div>

        <div class="row">
            <div class="col-sm-3">
                <select id="father" class="form-control" style=" min-width: 300px; ">
                    @*<option value="#">Seleccione...</option>*@
                    @foreach (CitasSAPSO.Models.CatalogueModels activity in ViewBag.activity)
                    {
                        <option value="@activity.ID">@activity.Name</option>
                    }
                </select>
            </div>
        </div>
        <br />
        <div class="row justify-content-end">
            <div>
                <a class="btn btn-success" id="updatePlace" name="updatePlace" style="margin-right: 1px; display: none" onclick="updateSubactivity($('#id').val(),
                             $('#description').val(), $('#father').val())"> Modificar</a>
            </div>
            <div>
                <a class="btn btn-success" id="registerPlace" name="registerPlace" style="display: inline" onclick="registerSubactivity($('#description').val(), $('#father').val())">Nuevo</a>
            </div>
            <div>
                <a class="btn btn-success" id="deletePlace" name="deletePlace" style="margin-right: 1px; display: none" onclick="deleteSubactivity($('#id').val())">Eliminar</a>
            </div>
            <div>
                <a class="btn btn-success" id="cleanPlace" name="cleanPlace" style="display: inline" onclick="cleanActivitySubtype()">Limpiar</a>
            </div>
        </div>
        <span id="messageSpanId"></span>
        <br />

        <h5 class="titles">Lista de registros almacenados</h5>


        <table id="tableID" class="table table-sm">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">ID</th>
                    <th scope="col">Descripción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CitasSAPSO.Models.CatalogueModels subactivity in ViewBag.subactivity)
                {
                    <tr>
                        <th> <a href="#" class="stretched-link " style="position: relative;">Seleccionar</a> </th>
                        <td>@subactivity.ID</td>
                        <td>@subactivity.Name</td>
                        <td style ="display:none;">@subactivity.FatherID</td>

                    </tr>
                }
            </tbody>
        </table>

    </form>

</center>

<div class="col-sm-3">
    @Html.ActionLink("Atrás", "DashboardAdministrator", "User", null, new { @class = "btn btn-success" })
</div>

<script>
    var letters = /^[A-Za-z]+$/;
    //limpia el formulario
    function cleanActivitySubtype() {
        document.getElementById("login-form").reset();
        $("#messageSpanId").html("");
        document.getElementById("deletePlace").style.display = "none";
        document.getElementById("updatePlace").style.display = "none";
        document.getElementById("registerPlace").style.display = "inline";        
        
    }
    function updateSubactivity(id, description, father) {
        if (description.match(letters) == null) {
            $("#messageSpanId").html("*El campo Descripción es inválido");
            return;
        }
        var parameters = { "id": id, "description": description, "father": father };
        $.ajax(
            {
                data: parameters,
                url: '/Catalogue/ModifySubactivityAdministrator',
                type: 'post',
                beforeSend: function () {
                    $("#messageSpanId").html("Procesando, espere por favor ...");
                },
                success: function (response) {
                    if (response == "Exitoso") {
                        location.href = "/Catalogue/ManageSubactivityAdministrator";
                    } else {
                        $("#messageSpanId").html("No se pudo agregar");
                    }
                }
            }
        );
    }
    function registerSubactivity(description, father) {
        if (description.match(letters) == null) {
            $("#messageSpanId").html("*El campo Descripción es inválido");
            return;
        }
        var parameters = { "description": description, "father": father };
        $.ajax(
            {
                data: parameters,
                url: '/Catalogue/RegisterSubactivityAdministrator',
                type: 'post',
                beforeSend: function () {
                    $("#messageSpanId").html("Procesando, espere por favor ...");
                },
                success: function (response) {
                    if (response == "Exitoso") {
                        location.href = "/Catalogue/ManageSubactivityAdministrator";
                    } else {
                        $("#messageSpanId").html(response);
                    }
                }
            }
        );
    }

    function deleteSubactivity(id) {
        var parameters = { "id": id };
        $.ajax(
            {
                data: parameters,
                url: '/Catalogue/DeleteSubactivityAdministrator',
                type: 'post',
                beforeSend: function () {
                    $("#messageSpanId").html("Procesando, espere por favor ...");
                },
                success: function (response) {
                    if (response == "Exitoso") {
                        location.href = "/Catalogue/ManageSubactivityAdministrator";
                    } else {
                        $("#messageSpanId").html("No se pudo agregar");
                    }
                }
            }
        );
    }


    //obtener valores de los campos seleccionados de la tabla
    $("#tableID tr").click(function () {
        $(this).addClass('selected').siblings().removeClass('selected');
        var id = $(this).find('td:first').html();
        var value = $(this).find('td:nth-child(2)');
        var td3 = $(this).find('td:nth-child(3)');
        var description = value.next().text();
        var father = td3.next().text();
        $("#id").val(id);
        $("#description").val(description);
        $("#father").val(father);
        document.getElementById("deletePlace").style.display = "inline";
        document.getElementById("updatePlace").style.display = "inline";
        document.getElementById("registerPlace").style.display = "none"; 
    });

</script>